<UserControl x:Class="ExpenseTracker.Views.SignupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.microsoft.com/markup-compatibility/2006"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:local="clr-namespace:ExpenseTracker.ViewModels"
             xmlns:dx1="http://schemas.devexpress.com/winfx/2008/xaml/core">
    <StackPanel Margin="20">
        <dx:TextEdit Name="UsernameTextBox"  Margin="0,0,0,10"/>
        <dx:TextEdit Name="EmailTextBox"  Margin="0,0,0,10"/>
        <dx:PasswordBoxEdit Name="PasswordBox"  Margin="0,0,0,10"/>
        <dx:PasswordBoxEdit Name="ConfirmPasswordBox"  Margin="0,0,0,20"/>
        <dx1:SimpleButton Content="Signup" Margin="0,0,0,10"/>
        <dx1:SimpleButton Content="Back to Login" Command="{Binding BackToLoginCommand}"/>
    </StackPanel>
</UserControl>
